<?xml version= "1.0" encoding= "utf8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width= "match_parent"
    android:layout_height= "match_parent"
    android:paddingBottom= "@dimen/activity_vertical_margin"
    android:paddingLeft= "@dimen/activity_horizontal_margin"
    android:paddingRight= "@dimen/activity_horizontal_margin"
    android:paddingTop= "@dimen/activity_vertical_margin"
    tools:context= "org.cafelivro.d03_relativelayouttest_2.MainActivity" >
    <RelativeLayout
        android:layout_width= "match_parent"
        android:layout_height= "wrap_content"
        android:background= "#cacaca" >
        <ImageView
            android:id= "@+id/ic_item"
            android:layout_width= "wrap_content"
            android:layout_height= "wrap_content"
            android:layout_centerVertical= "true"
            android:layout_marginLeft= "4dp"
            android:src= "@drawable/ic_fiber_manual_record_black_24dp" />
        <ImageView
            android:id= "@+id/ic_favorite"
            android:layout_width= "wrap_content"
            android:layout_height= "wrap_content"
            android:layout_alignParentRight= "true"
            android:layout_centerVertical= "true"
            android:src= "@drawable/ic_favorite_border_black_48dp" />
        <TextView
            android:layout_width= "match_parent"
            android:layout_height= "wrap_content"
            android:layout_centerVertical= "true"
            android:layout_marginLeft= "8dp"
            android:layout_marginRight= "8dp"
            android:layout_toLeftOf= "@id/ic_favorite"
            android:layout_toRightOf= "@id/ic_item"
            android:text= "리스트 항목"
            android:textSize= "20sp" />
    </RelativeLayout>
</RelativeLayout>