<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:layout_width= "match_parent"
        android:layout_height= "wrap_content"
        android:background= "@color/colorAccent"
        android:gravity= "center"
        android:text= "RelativeLayout 을 써봅시다."
        android:textSize= "20sp" />
    <TextView
        android:id= "@+id/anchor"
        android:layout_width= "wrap_content"
        android:layout_height= "wrap_content"
        android:layout_centerInParent= "true"
        android:background= "@color/colorAccent"
        android:padding= "20dp"
        android:text= "anchor"
        android:textSize= "20sp" />
    <Button
        android:layout_width= "wrap_content"
        android:layout_height= "wrap_content"
        android:layout_above= "@id/anchor"
        android:layout_centerInParent= "true"
        android:id="@+id/above"
        android:text= "above" />
    <Button
        android:layout_width= "wrap_content"
        android:layout_height= "wrap_content"
        android:layout_below= "@id/anchor"
        android:layout_centerInParent= "true"
        android:text= "below" />
    <Button
        android:layout_width= "wrap_content"
        android:layout_height= "wrap_content"
        android:layout_centerInParent= "true"
        android:layout_toLeftOf= "@id/anchor"
        android:text= "toLeftOf"
        android:textAllCaps= "false" />
    <Button
        android:layout_width= "wrap_content"
        android:layout_height= "wrap_content"
        android:layout_centerInParent= "true"
        android:layout_toRightOf= "@id/anchor"
        android:text= "toRightOf"
        android:textAllCaps= "false" />
    <Button
        android:layout_width= "match_parent"
        android:layout_height= "wrap_content"
        android:layout_alignParentBottom= "true"
        android:text= "alignParentBottom"
        android:textAllCaps= "false" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/above"
        android:layout_centerInParent="true"
        android:text="above above"
        android:id="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:id="@+id/anchor2"
        android:text="anchor2"
        />
</RelativeLayout>
